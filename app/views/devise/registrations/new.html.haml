
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  %legend Sign up
  .form-group.row
    = f.label :email, class: 'col-md-2 control-label'
    .col-md-4
      = f.text_field :email, class: 'form-control', autofocus: true

  .form-group.row
    = f.label :password, class: 'col-md-2 control-label'
    - if @minimum_password_length
      %em= "(#{@minimum_password_length} characters minimum)"
    .col-md-4
      = f.password_field :password, class: 'form-control', autocomplete: "off"

  .form-group.row
    = f.label :password_confirmation, class: 'col-md-2 control-label'
    .col-md-4
      = f.password_field :password_confirmation, class: 'form-control', autocomplete: "off"

  .form-group.row
    .col-md-offset-2.col-md-4
      = f.submit "Sign up", class: "btn btn-primary"
  
  - if f.object.errors.any?
    = render partial: 'shared/errors', locals: {f: f}
